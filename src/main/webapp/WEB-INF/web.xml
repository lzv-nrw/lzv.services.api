<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>de.nrw.hbz.lzv.services.restService.JerseyServerImpl</display-name>
  <servlet>
    <servlet-name>pdfs</servlet-name>
    <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>jersey.config.server.provider.packages</param-name>
      <param-value>de.nrw.hbz.lzv.services.plugin.veraPDF.restServiceImpl</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>pdfs</servlet-name>
    <url-pattern>/*</url-pattern>
   </servlet-mapping>
  <servlet>
    <servlet-name>about</servlet-name>
    <jsp-file>/WEB-INF/classes/jsp/Index.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>about</servlet-name>
    <url-pattern>/about/*</url-pattern>
   </servlet-mapping>
  <servlet>
    <servlet-name>css</servlet-name>
    <jsp-file>/WEB-INF/classes/css/default.css</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>css</servlet-name>
    <url-pattern>/css/*</url-pattern>
   </servlet-mapping>
      <servlet>
    <servlet-name>jspFileUpload</servlet-name>
    <jsp-file>/WEB-INF/classes/jsp/ValidateForm.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>jspFileUpload</servlet-name>
    <url-pattern>/upload/*</url-pattern>
  </servlet-mapping>
    <servlet>
    <servlet-name>fonts</servlet-name>
    <jsp-file>/WEB-INF/classes/fonts/wix-madefor-display-v10-latin_latin-ext-regular.woff2</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>fonts</servlet-name>
    <url-pattern>/fonts/*</url-pattern>
   </servlet-mapping>
  


</web-app>
